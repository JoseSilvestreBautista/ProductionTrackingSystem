<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
  prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE"
  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="sample.Controller">
  <Tab text="Product Line">
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
      <GridPane layoutX="157.0" layoutY="14.0" prefHeight="97.0" prefWidth="288.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <TextField fx:id="productName" onAction="#addProduct" prefHeight="25.0" prefWidth="139.0"
          GridPane.columnIndex="1"/>
        <TextField fx:id="manufacturer" onAction="#addProduct" prefHeight="25.0" prefWidth="33.0"
          GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Product Name"/>
        <Label text="Manufacturer" GridPane.rowIndex="1"/>
        <Label text="Item Type" GridPane.rowIndex="2"/>
        <ChoiceBox fx:id="itemType" onDragDetected="#addProduct" prefHeight="0.0" prefWidth="144.0"
          GridPane.columnIndex="1" GridPane.rowIndex="2"/>
      </GridPane>
      <Button layoutX="259.0" layoutY="131.0" mnemonicParsing="false" onAction="#addProduct"
        text="Add Product"/>
      <TableView layoutX="136.0" layoutY="207.0" prefHeight="150.0" prefWidth="328.0">
        <columns>
          <TableColumn prefWidth="75.0" text="C1"/>
          <TableColumn prefWidth="75.0" text="C2"/>
        </columns>
      </TableView>
      <Label layoutX="234.0" layoutY="176.0" text="ExistingProducts"/>
    </AnchorPane>
  </Tab>
  <Tab text="Produce">
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
      <ListView layoutX="201.0" layoutY="130.0" prefHeight="200.0" prefWidth="200.0"/>
      <Label layoutX="240.0" layoutY="14.0" text="Choose Product"/>
      <ComboBox fx:id="selectionChooseQuantity" layoutX="226.0" layoutY="50.0" prefWidth="150.0"
        promptText="Choose Quantity"/>
      <Button layoutX="244.0" layoutY="88.0" mnemonicParsing="false" onAction="#recordProduction"
        text="Record Production"/>
    </AnchorPane>
  </Tab>
  <Tab text="Production Log">
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
      <TextArea layoutX="200.0" layoutY="86.0" prefHeight="200.0" prefWidth="200.0"
        text="Text Area"/>
    </AnchorPane>
  </Tab>
  <stylesheets>
    <URL value="@Design.css"/>
  </stylesheets>
</TabPane>
